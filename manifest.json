{
    "manifest_version": 3,
    "name": "Stat Input Helper",
    "version": "1.1",
    "description": "A faster way for coaches to input data into a stat website.",
    "permissions": [
        "activeTab",
        "scripting",
        "storage"
    ],
    "host_permissions": [
        "https://datacenter.statsonline.com/*"
    ],
    "icons": {
        "16": "icons/vb_icon16.png",
        "48": "icons/vb_icon48.png",
        "128": "icons/vb_icon128.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "https://datacenter.statsonline.com/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "icons/vb_icon16.png",
                "icons/vb_icon48.png",
                "icons/vb_icon128.png"
            ],
            "matches": [
                "https://datacenter.statsonline.com/*"
            ]
        }
    ]
}
