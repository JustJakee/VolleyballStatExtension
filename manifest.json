{
    "manifest_version": 3,
    "name": "Stat Input Helper",
    "version": "1.0",
    "description": "A faster way for coaches to input data into a stat website.",
    "permissions": [
        "activeTab",
        "scripting",
        "storage"
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "*.js",
                "*.html"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}